<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haniyeaslani.yearsesons.MainActivity">



    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <TextView

            android:text="winter"
            android:gravity="top"
            android:textColor="#5964a7"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#5964a7"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>


        <ImageView
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:src="@mipmap/Winter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">

        </ImageView>



        <TextView

            android:text="Spring"
            android:gravity="top"
            android:textColor="#eb69f7"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#eb69f7"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@mipmap/Spring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">



        </ImageView>





        <TextView

            android:text="Summer"
            android:gravity="top"
            android:textColor="#f59e06"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#f59e06"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@mipmap/Summer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">



        </ImageView>



        <TextView

            android:text="Autmn"
            android:gravity="top"
            android:textColor="#ea460b"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#ea460b"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@mipmap/Atumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">



        </ImageView>



    </LinearLayout>
</LinearLayout>


